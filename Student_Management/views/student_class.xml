<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- tree view for class record-->
     <!-- record model is always same "ir.ui.view" for model layout-->
    <record id="student_student_tree" model="ir.ui.view">
        <field name="name">student.student.tree</field>
        <field name="model">student.student</field>
        <field name="arch" type="xml">
            <tree string="Details">
                <!-- data to be shown in the class menu in tree format-->
                <field name="rollNumber"/>
                <field name="studentName"/>
                <field name="studentClass"/>
                <field name="stream_id"/>
                <field name="fee_id"/>
                <field name="hobby_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>


    <!-- form view for class record-->
    <record id="student_student_form" model="ir.ui.view">
        <field name="name">student.student.form</field>
        <field name="model">student.student</field>
        <field name="arch" type="xml">
            <form string="Details">
                <header>
                    <button name = "wizard" string="Create Hobby" type="object" class="oe_highlight"
                            context="{'default_student_name': studentName}"/>
                    <button name = "create" string="Create" type="object"/>
                    <button name = "delete_new" string="Delete" type="object"/>
                </header>
                <!-- data to be shown in the class menu in form format-->
                <sheet>
                 <div class="oe_title">
                     <label for="rollNumber" string="RollNumber"/>
                     <h2><field name="rollNumber"/></h2>
                 </div>
                    <group>
                        <group>
                            <field name="studentName" />
                            <field name="date" />
                            <field name="studentClass" attrs="{'invisible':[('studentName','=','')]}"/>
                        </group>
                        <group>
                            <field name="stream_id"/>
                            <field name="fee_id"/>
                        </group>
                        <group>
                            <field name="hobby_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="note"/>
                            <field name="description" attrs="{'invisible':[('note','=',False)]}"/>
                        </group>
                    </group>
                     <notebook>
                        <page string="Page1"></page>
                        <page string="Page2"></page>
                        <page string="Page3"></page>
                    </notebook>
                </sheet>

            </form>
        </field>
    </record>

    <!--  UNDER DECELOPMENT
    <record id="student_class_search" model="ir.ui.view">
        <field name="name">student.class.search</field>
        <field name="model">student.class</field>
        <field name="arch" type="xml">
            <search string="student_search">
                <field name="name" filter_domain="['|',('studentName','ilike',self),('studentClass','ilike',self)]"/>
            </search>
        </field>
    </record>
   -->
                                    <!--- action record for menu's-->

    <!--action record for the student name and class-->
     <!-- record id is called in action of the menu and model is always same "ir.actions.act_window"-->
    <record id="action_student" model="ir.actions.act_window">
        <field name="name">Student</field> <!-- this name is shown in UI menu for user above create/import button-->
        <field name="res_model">student.student</field> <!--this define action function for specific model whose name is define here-->
        <field name="view_mode">tree,form</field> <!--it represent the model view how it should look for user -->
        <field name="help" type="html"> <!-- when the is no data in this menu it shown the icon with message declare in p tag-->
            <p class="o_view_nocontent_smiling_face">
                Enter First Student Details
            </p>
        </field>
    </record>


    <!--
    menuitme-tag: create the menu for the help of user to select menu
    id: is given to taget particular tag
    name: this is the name of menu shown to the user in UI
    sequence: this put the menu top/middle/bottom of other menu according to the sequence of this and other menu
               less sequence number menu will be in top and vice-versa
    parenet: this make the current menu behave as a child menu of other menu referred by the id in this tag
    action: when user click in this menu action refered to its record where its representation is define
    -->
    <menuitem id="student_main" name="Student Manager" sequence="4"/>
    <menuitem id="student_student" name="Student" parent="student_main" sequence="9" action="action_student"/>


</odoo>
