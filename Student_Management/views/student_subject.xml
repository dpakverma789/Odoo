<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- tree view for class record-->
     <!-- record model is always same "ir.ui.view" for model layout-->
    <record id="student_subject_tree" model="ir.ui.view">
        <field name="name">student.subject.tree</field>
        <field name="model">student.subject</field>
        <field name="arch" type="xml">
            <tree string="subject_details">
                <!-- data to be shown in the class menu in tree format-->
                <field name="studentSubject"/>
                <field name="student_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>


    <!-- form view for class record-->
    <record id="student_subject_form" model="ir.ui.view">
        <field name="name">student.subject.form</field>
        <field name="model">student.subject</field>
        <field name="arch" type="xml">
            <form string="subject_details">
                <!-- data to be shown in the class menu in form format-->
                <sheet>
                    <group>
                        <group>
                                <field name="studentSubject"/>
                                <field name="student_ids"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

                                    <!--- action record for menu's-->



    <!-- action record for the student subject or stream-->
    <record id="action_subject" model="ir.actions.act_window">
        <field name="name">Stream</field>
        <field name="res_model">student.subject</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Enter First Student Subject!
            </p>
        </field>
    </record>



    <!--
    menuitme-tag: create the menu for the help of user to select menu
    id: is given to taget particular tag
    name: this is the name of menu shown to the user in UI
    sequence: this put the menu top/middle/bottom of other menu according to the sequence of this and other menu
               less sequence number menu will be in top and vice-versa
    parenet: this make the current menu behave as a child menu of other menu referred by the id in this tag
    action: when user click in this menu action refered to its record where its representation is define
    -->
    <menuitem id="student_subject" name="Stream" parent="student_main" action="action_subject"/>

</odoo>
