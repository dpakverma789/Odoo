<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- tree view for class record-->
     <!-- record model is always same "ir.ui.view" for model layout-->
    <record id="student_fee_tree" model="ir.ui.view">
        <field name="name">student.fee.tree</field>
        <field name="model">student.fee</field>
        <field name="arch" type="xml">
            <tree string="fee_details">
                <!-- data to be shown in the class menu in tree format-->
                <field name="studentFee"/>
                <field name="class_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>


    <!-- form view for class record-->
    <record id="student_fee_form" model="ir.ui.view">
        <field name="name">student.fee.form</field>
        <field name="model">student.fee</field>
        <field name="arch" type="xml">
            <form string="fee_details">
                <!-- data to be shown in the class menu in form format-->
                <sheet>
                    <group>
                        <group>
                            <field name="studentFee"/>
                              <field name="class_ids"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

                                    <!--- action record for menu's-->

    <!--action record for the student fee according to the subject-->
    <record id="action_fee" model="ir.actions.act_window">
        <field name="name">Fees</field>
        <field name="res_model">student.fee</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Enter First Student Fee!
            </p>
        </field>
    </record>

    <!--
    menuitme-tag: create the menu for the help of user to select menu
    id: is given to taget particular tag
    name: this is the name of menu shown to the user in UI
    sequence: this put the menu top/middle/bottom of other menu according to the sequence of this and other menu
               less sequence number menu will be in top and vice-versa
    parenet: this make the current menu behave as a child menu of other menu referred by the id in this tag
    action: when user click in this menu action refered to its record where its representation is define
    -->
    <menuitem id="student_fee" name="Fees" parent="student_main" action="action_fee"/>

</odoo>
