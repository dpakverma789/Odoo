<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- add exam wizard inside division model-->
    <record id="student_exam_wizard" model="ir.ui.view">
        <field name="name">student_exam_wizard</field>
        <field name="model">student.exam.wizard</field>
        <field name="arch" type="xml">
            <form string="student class">
                <group>
                    <field name="student_name"/>
                    <field name="subject_id"/>
                    <field name="Student_Class_id"/>
                    <field name="marks"/>
                </group>
                <footer>
<!--                 button type "action" it is define in the python file-->
                    <button name="add_exam" string="add exam" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

<!--    button type is "object" it is trigger in the model where button is declare and here it is define-->
    <record id="action_student_exam_wizard" model="ir.actions.act_window">
        <field name="name">Add Subject</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">student.exam.wizard</field>
        <field name="view_mode">form</field>
<!--        this ref id trigger form view of wizard define here-->
        <field name="view_id" ref="student_exam_wizard"/>
        <field name="target">new</field>
    </record>

    <!-- add subject wizard inside student class model-->
     <record id="student_subject_wizard" model="ir.ui.view">
        <field name="name">student_subject_wizard</field>
        <field name="model">student.class.wizard</field>
        <field name="arch" type="xml">
            <form string="student class">
                <group>
                    <field name="student_id"/>
                    <field name="class_id"/>
                    <field name="division_id"/>
                </group>
                <footer>
                    <button name="add_subject" string="create subject" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_student_subject_wizard" model="ir.actions.act_window">
        <field name="name">student_class_wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">student.class.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="student_subject_wizard"/>
        <field name="target">new</field>
    </record>
</odoo>