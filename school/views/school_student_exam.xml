<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="school_student_exam_tree_view" model="ir.ui.view">
        <field name="name">school_student_exam_tree_view</field>
        <field name="model">school.student.exam</field>
        <field name="arch" type="xml">
            <tree string="school_student_exam_tree_data">
                <field name="student_name"/>
                <field name="subject_id"/>
                <field name="Student_Class_id"/>
                <field name="marks"/>
            </tree>
        </field>
    </record>


    <record id="school_student_exam_form_view" model="ir.ui.view">
        <field name="name">school_student_exam_form_view</field>
        <field name="model">school.student.exam</field>
        <field name="arch" type="xml">
            <form string="school_student_exam_form_data">
                <sheet>
                    <group>
                        <field name="student_name"/>
                        <field name="subject_id"/>
                    </group>
                    <group>
                        <field name="Student_Class_id"/>
                        <field name="marks"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_school_student_exam" model="ir.actions.act_window">
        <field name="name">StudentExam</field>
        <field name="res_model">school.student.exam</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create student exam Details Here!
            </p>
        </field>
    </record>
    <menuitem id="school_student_exam" name="Student" parent="school_main_menu" action="action_school_student_exam"/>

</odoo>
