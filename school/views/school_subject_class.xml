<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="school_class_subject_tree_view" model="ir.ui.view">
        <field name="name">school_class_subject_tree_view</field>
        <field name="model">school.class.subject</field>
        <field name="arch" type="xml">
            <tree string="school_class_subject_tree_data">
                <field name="maximum_marks"/>
                <field name="subject_id"/>
                <field name="class_id"/>
                <field name="division_id"/>
            </tree>
        </field>
    </record>


    <record id="school_class_subject_form_view" model="ir.ui.view">
        <field name="name">school_class_subject_form_view</field>
        <field name="model">school.class.subject</field>
        <field name="arch" type="xml">
            <form string="school_class_subject_form_data">
                <sheet>
                   <group>
                       <field name="maximum_marks"/>
                   </group>
                    <group>
                        <field name="subject_id"/>
                    </group>
                    <group>
                        <field name="class_id"/>
                    </group>
                    <group>
                        <field name="division_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_school_class_subject" model="ir.actions.act_window">
        <field name="name">school_class_subject</field>
        <field name="res_model">school.class.subject</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Subject-Class Details Here!
            </p>
        </field>
    </record>

    <menuitem id="school_class_subject" name="Class(Subject)" parent="school_main_menu" action="action_school_class_subject"/>

</odoo>
