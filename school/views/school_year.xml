<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="school_year_tree_view" model="ir.ui.view">
        <field name="name">school_year_tree_view</field>
        <field name="model">school.year</field>
        <field name="arch" type="xml">
            <tree string="school_year_tree_data">
                <field name="student_name"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="is_current"/>
            </tree>
        </field>
    </record>


    <record id="school_year_form_view" model="ir.ui.view">
        <field name="name">school_year_form_view</field>
        <field name="model">school.year</field>
        <field name="arch" type="xml">
            <form string="school_year_form_data">
                <sheet>
                   <group>
                       <field name="student_name"/>
                   </group>
                    <group>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="is_current"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_school_year" model="ir.actions.act_window">
        <field name="name">Year</field>
        <field name="res_model">school.year</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Year Details Here!
            </p>
        </field>
    </record>

    <menuitem id="school_year" name="Year" parent="school_main_menu" action="action_school_year"/>

</odoo>
