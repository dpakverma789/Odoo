<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="school_division_tree_view" model="ir.ui.view">
            <field name="name">school_division_tree_view</field>
            <field name="model">school.division</field>
            <field name="arch" type="xml">
                <tree string="school_division_tree_data">
                    <field name="division_name"/>
                    <field name="class_id"/>
                    <field name="subject_ids"/>
                </tree>
            </field>
        </record>

        <record id="school_division_form_view" model="ir.ui.view">
            <field name="name">school_division_form_view</field>
            <field name="model">school.division</field>
            <field name="arch" type="xml">
                <form string="school_division_form_data">
                    <header>

                        <button name="%(school.action_student_exam_wizard)d"
                                string="create exam wizard" type="action"
                                class="oe_highlight"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="division_name"/>
                        </group>
                        <group>
                            <field name="class_id"/>
                        </group>
                        <group>
                            <field name="subject_ids"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_school_division" model="ir.actions.act_window">
            <field name="name">Division</field>
            <field name="res_model">school.division</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create Division Details Here!
                </p>
            </field>
        </record>

<!--        <menuitem id="school_division" name="Division" parent="school_main_menu" action="action_school_division"/>-->
    </data>
</odoo>
