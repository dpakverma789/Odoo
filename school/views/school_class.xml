<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="school_class_tree_view" model="ir.ui.view">
        <field name="name">school_class_tree_view</field>
        <field name="model">school.class</field>
        <field name="arch" type="xml">
            <tree string="school_class_tree_data">
                <field name="class_name"/>
                <field name="class_code"/>
            </tree>
        </field>
    </record>


    <record id="school_class_form_view" model="ir.ui.view">
        <field name="name">school_class_form_view</field>
        <field name="model">school.class</field>
        <field name="arch" type="xml">
            <form string="school_class_form_data">
                <sheet>
                   <group>
                       <field name="class_name"/>
                       <field name="class_code"/>
                   </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_school_class" model="ir.actions.act_window">
        <field name="name">Class</field>
        <field name="res_model">school.class</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Class Details Here!
            </p>
        </field>
    </record>

    <menuitem id="school_class" name="Class" parent="school_main_menu" action="action_school_class"/>

</odoo>
