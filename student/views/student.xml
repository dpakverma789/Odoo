<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- id="student_action" is a name to invoke the action record for menu
    menu must call this action to run functionality when we click on menu
    number of menu== number of action record-->
    <!--number of record==number of menu's-->
    <record model="ir.actions.act_window" id="student_action">
        <field name="name">student-list</field>
        <field name="type">ir.actions.act_window</field>
        <!-- res_model is name of the model on which we are defining action-->
        <field name="res_model">first.student</field>
        <field name="view_mode">tree,form,kanban</field>
        <!-- it shows the blank record with icon-->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Enter First-Student Details!
            </p>
        </field>
    </record>

    <!--this record display the model in tree type-->
    <record id="student_tree" model="ir.ui.view">
        <field name="name">student</field>
        <field name="model">first.student</field>
        <field name="arch" type="xml">
            <tree string="Student list">
                <field name='studentfirstName'/>
                <field name="studentlastName"/>
                <field name='studentId'/>
            </tree>
        </field>
    </record>

    <!--this record display the model in form type-->
    <record id="student_form" model="ir.ui.view">
        <field name="name">student</field>
        <field name="model">first.student</field>
        <field name="arch" type="xml">
            <form string="Student list">
                <sheet>
                    <group>
                        <group>
                            <field name='studentfirstName'/>
                        </group>
                        <group>
                            <field name='studentlastName'/>
                        </group>
                        <group>
                            <field name="studentId"/>
                        </group>
                    </group>
                <group>
                    <field name='studentRemark'/>
                </group>
            </sheet>
            </form>
        </field>
    </record>
    <menuitem id="student_base" name="Student"/>
    <menuitem id="student_class" name="Student" parent="student_base" action="student_action"/>
</odoo>