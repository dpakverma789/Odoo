<odoo>
  <data>
    <menuitem id="id_menu_school2" name="School2" sequence="1"/>

    <record id="id_action_student" model="ir.actions.act_window">
      <field name="name">Student Action Window</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">school2.student</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Welcome!!
        </p><p>
        Create some data.... :P
        </p>
      </field>
    </record>

    <menuitem id="id_menu_school2_student" name="Student" action="id_action_student" parent="id_menu_school2" sequence="1"/>

    <record id="id_form_student" model="ir.ui.view">
        <field name="name">Student Form</field>
        <field name="model">school2.student</field>
        <field name="arch" type="xml">
            <form string="Student Form">
                <sheet>
                    <group>
                      <div class="oe_title">
                          <label for="name" class="oe_edit_only"/>
                          <h1>
                              <field name="name" placeholder="Student name"/>
                          </h1>
                      </div>
                      <field name="roll_no"/>
                      <field name="dob"/>
                      <field name="class_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>





    <record id="id_action_class" model="ir.actions.act_window">
      <field name="name">Class Action Window</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">school2.class</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Welcome!!
        </p><p>
        Create some data.... :P
        </p>
      </field>
    </record>

    <menuitem id="id_menu_school2_class" name="Class" action="id_action_class" parent="id_menu_school2" sequence="2"/>

    <record id="id_form_class" model="ir.ui.view">
        <field name="name">Class Form</field>
        <field name="model">school2.class</field>
        <field name="arch" type="xml">
            <form string="Class Form">
                <sheet>
                    <group>
                      <field name="name"/>
                      <field name="subjects_ids" editable="bottom"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>





    <record id="id_action_subjects" model="ir.actions.act_window">
      <field name="name">Subjects Action Window</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">school2.subjects</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Welcome!!
        </p><p>
        Create some data.... :P
        </p>
      </field>
    </record>

    <menuitem id="id_menu_school2_subjects" name="Subjects" action="id_action_subjects" parent="id_menu_school2" sequence="3"/>

    <record id="id_form_subjects" model="ir.ui.view">
        <field name="name">Subjects Form</field>
        <field name="model">school2.subjects</field>
        <field name="arch" type="xml">
            <form string="Subjects Form">
                <sheet>
                    <group>
                      <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>




    <record id="id_action_exam" model="ir.actions.act_window">
      <field name="name">Exam Action Window</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">school2.exam</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Welcome!!
        </p><p>
        Create some data.... :P
        </p>
      </field>
    </record>

    <menuitem id="id_menu_school2_exam" name="Exam" action="id_action_exam" parent="id_menu_school2" sequence="4"/>
    <record id="id_form_exam" model="ir.ui.view">
        <field name="name">Exam Form</field>
        <field name="model">school2.exam</field>
        <field name="arch" type="xml">
            <form string="Exam Form">
                <sheet>
                    <group>
                      <field name="student_id"/>
                      <field name="class_id"/>
                      <field name="subjects_ids"/>
                      <field name="marks"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <act_window id="launch_the_wizard"
            name="Launch the Wizard"
            res_model="school2.wizard"
            view_mode="form"
            target="new"/>
      <menuitem id="id_menu_school2_wizrd" name="Wizard" action="launch_the_wizard" parent="id_menu_school2" sequence="5"/>
    <record id="id_form_wizard" model="ir.ui.view">
        <field name="name">Wizard Form</field>
        <field name="model">school2.wizard</field>
        <field name="arch" type="xml">
            <form string="Wizard Form">
                <sheet>
                    <group>
                      <field name="student_id"/>
                      <field name="class_id"/>
                      <field name="subjects_ids"/>
                      <field name="marks"/>
                    </group>
                    <footer>
                        <button name="copyy" type="object" string="Add to exam" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

  </data>
</odoo>