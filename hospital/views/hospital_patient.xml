<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View   -->
    <record id="hospital_patient_tree" model="ir.ui.view">
        <field name="name">hospital.patient.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree string="hospital_patient_details" sample="1">
                <field name="patient_name"/>
                <field name="patient_age"/>
                <field name="patient_contact"/>
                <field name="patient_gender"/>
            </tree>
        </field>
    </record>

    <!-- Form view -->
    <record id="hospital_patient_form" model="ir.ui.view">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form string="hospital_patient_details">
                <sheet>
                    <field name="patient_image" widget='image' class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="patient_name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="patient_age"/>
                            <field name="patient_contact"/>
                            <field name="patient_gender"/>
                        </group>
                        <field name="appointment_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="hospital_patient_search" model="ir.ui.view">
        <field name="name">hospital.patient.search</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <search string="hospital_patient_search">
                <field name="patient_name"/>
                <separator/>
                <filter name="Male" string="Male" domain="[('patient_gender', '=', 'male')]"/>
                <separator/>
                <filter name="Female" string="Female" domain="[('patient_gender', '=', 'female')]"/>
                <group expand="0" string="Group By">
                    <filter name="patient_gender" string="Gender" context="{'group_by':'patient_gender'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="hospital_patient_kanban" model="ir.ui.view">
        <field name="name">hospital.patient.kanban</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="patient_name"/>
                <field name="patient_age"/>
                <field name="patient_contact"/>
                <field name="patient_gender"/>
                <field name="id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="float-left">
                                <img t-att-src="kanban_image('hospital.patient', 'patient_image', record.id.raw_value)"
                                     t-att-title="patient_image" t-att-alt="patient_image"
                                     class="rounded oe_kanban_avatar o_image_24_cover"
                                     style="width:70px!important;height:70px!important"/>
                            </div>
                            <div class="row mb4">
                                <strong class="col-6">
                                    <field name="patient_name"/>
                                </strong>
                                <strong class="col-6 text-right">
                                    <i class="fa fa-calendar" aria-label="Date" role="img" title="Date"/>
                                    <field name="patient_age"/>
                                </strong>
                                <div class="col-10">
                                    <field name="patient_contact"/>
                                </div>
                                <div class="col-6">
                                    <field name="patient_gender"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action  -->
    <record id="hospital_patient_action" model="ir.actions.act_window">
        <field name="name">Hospital Patient</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{'default_patient_contact':'1234567890'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create First Patient Details!
            </p>
        </field>
    </record>

    <menuitem id="hospital_root_menu" name="Hospital"/>
    <menuitem id="hospital_patient_menu" name="Patients" parent="hospital_root_menu" action="hospital_patient_action"/>
</odoo>
